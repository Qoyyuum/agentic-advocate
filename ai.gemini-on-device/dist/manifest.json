{
  "name": "Agentic Advocate - Legal AI Assistant",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "AI-powered legal assistant using Gemini API for document analysis, legal research, compliance, and document generation.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "minimum_chrome_version": "116",
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Agentic Advocate"
  }
}