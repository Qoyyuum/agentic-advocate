{
  "name": "Agentic Advocate - AI Assistant",
  "version": "0.3",
  "manifest_version": 3,
  "description": "Privacy-first Chrome extension powered by Gemini Nano for summarization, writing, rewriting, and chat capabilities.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel", "storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "minimum_chrome_version": "128",
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Agentic Advocate AI"
  }
}
