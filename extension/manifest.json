{
  "manifest_version": 3,
  "name": "Agentic Advocate",
  "description": "Legal document assistant with Chrome Built-in AI (Writer, Rewriter, Proofreader, Translator, Summarizer, Prompt).",
  "version": "1.0.0",
  "action": {
    "default_title": "Agentic Advocate",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}